<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">
    <!-- Custom styles for this template -->
    <style>
body {
  padding-top: 70px;
  padding-bottom: 30px;
}
    </style>
    <title>[% output.title %]</title>
  </head>
  <body role="document">
    <!-- Fixed navbar -->
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">[% output.title %]</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li><a href="http://perlhacks.com/">Home</a></li>
[% IF output.about -%]
            <li><a href="[% output.about %]">About</a></li>
[% END -%]
            <li><a href="https://metacpan.org/author/[% author.cpan %]">MetaCPAN</a></li>
            <li><a href="https://github.com/[% author.github %]/">Github</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div class="container" role="main">
    <h1>[% output.title %]</h1>
    <p>A dashboard to see the state of my
      <a href="https://metacpan.org/author/[% author.cpan %]">CPAN modules</a>.</p>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Name</th><th>MetaCPAN</th><th>Github</th>
          <th>Travis CI</th><th>Coveralls</th>
        </tr>
      </thead>
      <tbody>
[% FOREACH m IN modules -%]
        <tr>
        <td>[% m.name %]</td>
        <td><a href="https://metacpan.org/release/[% m.dist %]"><kn class="glyphicon glyphicon-download" aria-hidden="true"></span></a></td>
        <td><a href="https://github.com/[% author.github %]/[% m.repo %]"><span class="glyphicon glyphicon-list" aria-hidden="true"></span></a></td>
        <td><a href="https://travis-ci.org/[% author.github %]/[% m.repo %]?branch=master"><img src="https://travis-ci.org/[% author.github %]/[% m.repo %].svg?branch=master" /></a></td>
      <td><a href='https://coveralls.io/github/[% author.github %]/[% m.repo %]?branch=master'><img src='https://coveralls.io/repos/[% author.github %]/[% m.repo %]/badge.svg?branch=master&service=github' alt='Coverage Status' /></a></td>
      </tr>
[% END -%]
      </tbody>
    </table>
    </div>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
[% IF output.analytics -%]
<script type="text/javascript">
	(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
		(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
		m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
	})(window,document,'script','//www.google-analytics.com/analytics.js','__gaTracker');

	__gaTracker('create', 'i[% output.analytics %]', 'auto');
	__gaTracker('set', 'forceSSL', true);
	__gaTracker('send','pageview');

</script>
[% END -%]
  </body>
</html>
